<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:background="#00FFFFFF">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:id="@+id/shop"
        android:background="@drawable/nen_cuahang">
    </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/khungtien"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="160dp"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tien"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:textSize="18dp"
                android:textColor="#FF9C07"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/shop1"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="171dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/ruby1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ruby1"/>
            <TextView
                android:id="@+id/txt_ruby1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ruby1"
                android:text="10 ruby"
                android:textColor="#E6780D"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/txt_ruby1"
                android:id="@+id/video_ruby"
                android:background="@drawable/icon_shopvideo"
                android:layout_marginLeft="40dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/shop2"
            android:layout_below="@+id/shop1"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/ruby2"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ruby2"/>
            <TextView
                android:id="@+id/txt_ruby2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ruby2"
                android:text="100 ruby"
                android:textColor="#E6780D"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:layout_marginTop="3dp"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="20k"
                android:textSize="21dp"
                android:textStyle="bold"
                android:textColor="#F65430"
                android:layout_toRightOf="@id/txt_ruby2"
                android:id="@+id/ruby_20k"
                android:background="@drawable/but_shop"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shop3"
        android:layout_below="@+id/shop2"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/ruby3"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ruby3"/>
        <TextView
            android:id="@+id/txt_ruby3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ruby3"
            android:text="300 ruby"
            android:textColor="#E6780D"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_marginTop="3dp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="50k"
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="#F65430"
            android:layout_toRightOf="@id/txt_ruby3"
            android:id="@+id/ruby_50k"
            android:background="@drawable/but_shop"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shop4"
        android:layout_below="@+id/shop3"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/ruby4"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ruby4"/>
        <TextView
            android:id="@+id/txt_ruby4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ruby4"
            android:text="800 ruby"
            android:textColor="#E6780D"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_marginTop="3dp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="100k"
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="#F65430"
            android:layout_toRightOf="@id/txt_ruby4"
            android:id="@+id/ruby_100k"
            android:background="@drawable/but_shop"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/cham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Chạm để thoát"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic">
    </TextView>
</RelativeLayout>