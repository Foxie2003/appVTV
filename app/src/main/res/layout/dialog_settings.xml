<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="450dp"
    android:background="#00FFFFFF">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="370dp"
        android:id="@+id/shopp"
        android:background="@drawable/back_setting">
    </RelativeLayout>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/nhacback1"
       android:layout_marginTop="170dp"
       android:layout_centerHorizontal="true">
       <ImageView
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:id="@+id/nhacback"
           android:src="@drawable/icon_loa"
           >
       </ImageView>
       <SeekBar
           android:layout_marginRight="20dp"
           android:layout_toRightOf="@+id/nhacback"
           android:layout_width="185dp"
           android:id="@+id/seek1"
           android:layout_centerVertical="true"
           android:layout_height="wrap_content"
           >
       </SeekBar>
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nhacxb1"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/nhacback1"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/nhacxb"
            android:src="@drawable/icon_mic">
        </ImageView>
        <SeekBar
            android:layout_marginRight="20dp"
            android:id="@+id/seek2"
            android:layout_toRightOf="@+id/nhacxb"
            android:layout_width="185dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
        </SeekBar>
    </RelativeLayout>
    <TextView
        android:id="@+id/cham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Chạm để thoát"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic">
    </TextView>
</RelativeLayout>